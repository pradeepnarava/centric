<div class="gridDiv">
  <div class="titleHead">Listing RawMaterials</div>
  <div class="gryBox">
    <div class="linkOuter w45 fr txtR mt5">
      <%= link_to 'New rawmaterial', new_rawmaterial_path %>
    </div><br class="clear" />
    <div id="contacts">
      <div id="contact_list" class="contactsDIV">
        <div class="gridTable">
<table cellspacing="0" cellpadding="0" width="100%">
  <tr>
    <th>Name</th>
    <th>Grade</th>
    <th>Width</th>
    <th>Thickness</th>
    <th>Coil weight</th>
    <th>Grade</th>
    <th>Type</th>
    <th>Rawmaterial category</th>
  </tr>

<% for rawmaterial in @rawmaterials %>
  <tr class="<%=cycle("bg1", "bg2")%>">
    <td><%=h rawmaterial.name %></td>
    <td><%=h rawmaterial.grade %></td>
    <td><%=h rawmaterial.width %></td>
    <td><%=h rawmaterial.thickness %></td>
    <td><%=h rawmaterial.coil_weight %></td>
    <td><%=h rawmaterial.grade %></td>
    <td><%=h rawmaterial.type %></td>
    <td><%=h rawmaterial.rawmaterial_category_id %></td>
    <td>
        <div class="fr">
          <%=  link_to(image_tag('/images/livia_portal/icon_edit.gif',{:alt =>"Edit", :title=>"Edit", :border => 0, :hspace => "0"}),  edit_rawmaterial_path(rawmaterial))%>
          <%=  link_to(image_tag('/images/livia_portal/icon_reject_1.gif',{:alt =>"DeActivate", :title=>"DeActivate", :confirm => 'Are you sure?',:border => 0, :hspace => "2"}), rawmaterial, :confirm => 'Are you sure?', :method => :delete) %>
        </div>
      </td>
  </tr>
<% end %>
</table>
</div>
      </div></div></div></div>
<br />


