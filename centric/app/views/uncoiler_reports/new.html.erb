  </p>
  <p>
    <%= f.label :thickness %><br />
    <%= f.text_field :thickness %>
  </p>
  <p>
    <%= f.label :grade %><br />
    <%= f.text_field :grade %>
  </p>
  <p>
    <%= f.label :type %><br />
    <%= f.text_field :type %>
  </p>
  <p>
    <%= f.label :width_actual %><br />
    <%= f.text_field :width_actual %>
  </p>
  <p>
    <%= f.label :thickness_actual %><br />
    <%= f.text_field :thickness_actual %>
  </p>
  <p>
    <%= f.label :grade_actual %><br />
    <%= f.text_field :grade_actual %>
  </p>
  <p>
    <%= f.label :type_actual %><br />
    <%= f.text_field :type_actual %>
  </p>
  <p>
    <%= f.submit "Create" %>
  </p>
