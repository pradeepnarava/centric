  </p>
  <p>
    <%= f.label :shift %><br />
    <%= f.datetime_select :shift %>
  </p>
  <p>
    <%= f.label :operator_name %><br />
    <%= f.text_field :operator_name %>
  </p>
  Slitting coil no
  <%=f.collection_select( :slittingproduction_id, Slittingproduction.all,:id,:slitting_coil_no,{:include_blank => "----------Select----------"})%>

  <p>
    <%= f.label :tube_od %><br />
    <%= f.text_field :tube_od %>
  </p>
  <p>
    <%= f.label :width %><br />
